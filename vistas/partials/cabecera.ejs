<!-- Imagen principal del evento -->
<header>
    <a href="/"><img src="/img/image1.png" alt="EZVENTS Logo" class="logo1"></a>

<div class="saludo">
    <% if(session && session.login) { %>
        Hola, <%=session.nombre%> | <a href='/usuarios/logout'>Cerrar sesion</a>
        <a href="/usuarios/datos">
            <img src="/img/perfil.png" class="logo1">
        </a>
        <% if (session.rol === 'usuario') { %>
            <a href="/vistas/paginas/carrito"><img src="./img/carrito.jpg" alt="Carrito"></a>
        <% } %>
    <% if (session.rol === 'admin' || session.rol === 'empresa') { %>
        <a href="/vistas/paginas/añadirEvento" class="boton-anadir">Añadir Evento</a>
    <% } %>
<% } else { %>
    Usuario desconocido
    <button onclick="window.location.href='/usuarios/login'">Acceder</button>
<% } %>
</div>

</header>

<hr class="separador">

<nav>
    <a href="/">Inicio</a>
    <a href="/noticias">Noticias</a>
    <a href="/puntos">Puntos</a>
    <a href="/foro">Foro</a>
</nav>

